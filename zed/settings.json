{
  "auto_install_extensions": {
    "assembly": true,
    "basher": true,
    "codebook": true,
    "crates-lsp": true,
    "docker-compose": true,
    "dockerfile": true,
    "env": true,
    "git-firefly": true,
    "github-actions": true,
    "graphql": true,
    "html": true,
    "http": true,
    "julia": true,
    "just": true,
    "just-ls": true,
    "lua": true,
    "make": true,
    "marksman": true,
    "mermaid": true,
    "oxc": true,
    "package-swift-lsp": true,
    "postgres-language-server": true,
    "proto": true,
    "ruff": true,
    "sql": true,
    "sqruff": true,
    "swift": true,
    "toml": true,
    "wit": true
  },
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Mirage"
  },
  "icon_theme": "Zed (Default)",
  "base_keymap": "SublimeText",
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_size": 14,
  "ui_font_size": 14,
  "vim_mode": true,
  "confirm_quit": true,
  "restore_on_startup": "none",
  "auto_signature_help": true,
  "relative_line_numbers": true,
  "inlay_hints": {
    "enabled": true
  },
  "minimap": {
    "show": "auto"
  },
  "git_panel": {
    "dock": "right"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_diagnostics": "errors"
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_update": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "use_smartcase_find": true
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono",
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"],
    "GitHub Actions": [".github/workflows/*.yml", ".github/workflows/*.yaml"]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/target",
    "**/.vscode",
    "**/node_modules"
  ],
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "use_modifier_to_send": true,
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },
  "languages": {
    "YAML": {
      "formatter": "language_server",
      "format_on_save": "off"
    },
    "Python": {
      "format_on_save": { "language_server": { "name": "ruff" } },
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        },
        "check": {
          "command": "clippy",
          "workspace": true
        }
      }
    },
    "vtsls": {
      "settings": {
        "javascript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        },
        "typescript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "format": {
            "enable": true,
            "singleQuote": true
          }
        }
      }
    }
  }
}

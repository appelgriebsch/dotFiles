line-color = #f00

;border-bottom-size = 1
;border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = FuraCode Nerd Font Mono:weight=medium:size=12;1

modules-left = i3
modules-center = xwindow
modules-right = pulseaudio cpu memory wlan battery temperature date

;tray-position = right
;tray-padding = 2
;tray-background = ${xrdb:color_base03:#1f2430}

;wm-restack = bspwm
;wm-restack = i3


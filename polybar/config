[colors]
background = ${xrdb:color_base03:#1f2430}
;background = #222
background-alt = ${xrdb:color_base02:#292b30}
foreground = ${xrdb:color_base0:#e6e1cf}
;foreground = #dfdfdf
foreground-alt = ${xrdb:color_base2:#ffffff}
primary = ${xrdb:color_orange:#ffcc66}
secondary = ${xrdb:color_blue:#a6e1ff}
alert = ${xrdb:color_red:#ff6666}

[bar/main]
monitor = ${env:MONITOR:LVDS-0}
width = 100%
height = 27
offset-x = 0%
offset-y = 0%
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

